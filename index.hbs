{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}
<header id="appHeader" class="app__header">
    <h1 class="app__title">{{@blog.title}}</h1>
    <h2 class="app__description">{{@blog.description}}</h2>
    <a href="#" class="create-event">Create new event</a>
</header>

<main class="app__view">
    <div class="app__meta">
         <h1>Schedule</h1>
         <h1>{{date format="DD-MM-YYYY"}}</h1>
         <a href="#" class="modal-button add-user">+</a>
    </div>

    <ul class="app-players"></ul>
</main>